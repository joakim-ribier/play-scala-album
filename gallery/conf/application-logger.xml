<?xml version="1.0" encoding="UTF-8" ?>

<configuration scan="true" scanPeriod="60 seconds">
	
	<appender name="gallery" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<File>/var/log/gallery/gallery.log</File>
 	
 		<layout>
  		<pattern>%d{HH:mm:ss.SSS} [%-5level] {%logger{32}} [%X{sessionId}/%X{username}]:%msg%n</pattern>
  	</layout>
	
	  <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
	  	<maxIndex>10</maxIndex>
	    <FileNamePattern>/var/log/gallery/gallery.log.%i</FileNamePattern>
	  </rollingPolicy>
	
	  <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
	  	<MaxFileSize>30000KB</MaxFileSize>
	  </triggeringPolicy>
  
  </appender>
 
  <logger name="play" level="INFO" />
  
  <logger name="application" level="INFO" />
   
  <include file="/etc/gallery/logback.xml" />
  
	<root level="INFO">
		<appender-ref ref="gallery" />
	</root>
	
</configuration>