# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET		/								   														controllers.Authentication.redirect
GET		/album								   											controllers.Application.index

# APPLICATION CONTROLLER

GET		/album/get/photo/upload/thumbnail/:photo			controllers.Application.getPhotoInUploadThumbailDirectory(photo: String)
GET		/album/get/photo/:photo												controllers.Application.getPhotoInStandardDirectory(photo: String)
GET		/album/get/thumbnail/photo/:photo							controllers.Application.getPhotoInThumbailDirectory(photo: String)
GET		/album/get/800x600/photo/:photo								controllers.Application.getPhotoIn800x600Directory(photo: String)
GET   /album/page/:page/tags/:tags    							controllers.Application.page(page: String, tags: String)

GET   /album/photo/previous/:id/tags/:tags 					controllers.Application.getPreviousPhoto(id: String, tags: String)
GET   /album/photo/next/:id/tags/:tags 							controllers.Application.getNextPhoto(id: String, tags: String)


# CONFIGURATION CONTROLLER

GET		/album/configuration													controllers.Application.configuration
POST	/album/configuration													controllers.Application.createAdministrator


# SEND MAIL CONTROLLER

POST	/album/user/new/address/mail									controllers.SendMail.newEmail


# ADMINSTRATOR CONTROLLER

GET		/album/admin							   									controllers.Administrator.index
GET		/album/admin/list/photo												controllers.Administrator.listPhotoUploaded
GET		/album/admin/add/new/photo/:name							controllers.Administrator.addNewPhoto(name: String)
POST 	/album/upload																	controllers.Administrator.upload
POST 	/album/savePhoto															controllers.Administrator.savePhoto


# AUTHENTICATION CONTROLLER

GET		/album/login																	controllers.Authentication.login
GET		/album/logout																	controllers.Authentication.logout
POST	/album/authenticate														controllers.Authentication.authenticate
GET		/album/authenticate														controllers.Authentication.redirectAuthenticate


# Map static resources from the /public folder to the /assets URL path

GET   /assets/*file               									controllers.Assets.at(path="/public", file)